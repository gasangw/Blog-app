<div>
    <div>
        <div>
            <h2>Post : <%= @post.Title %> by <%= @post.user.Name %></h2>
            <h3>Comments: <%= @post.CommentsCounter%>, Likes: <%= @post.LikesCounter %><h3>
        </div>
        <p><%= @post.Text %></p>

         <div>
        <%= form_with url: "/users/#{@post.user_id}/posts/#{@post.id}/likes", scope: :like do |form| %>
        <%= form.submit "Like " %>
        <%end%>
        </div>
          
            <% @comments.each do |comment|%>
                <h3><%= comment.Text %></h3>
                <% if can? :destroy, comment%>
                <%= button_to 'delete', user_post_comment_path(post_id: @post.id, id: comment.id), method => :delete, data: { confirm: 'Do you really want to delete this!'} %>
            <% end%>
            <% end %>
    </div>
         <%= render partial: "add_comments", local: { post: @post } %>
    <% if can? :destroy, @post %>
    <%= button_to 'Delete Post' user_post_path(post_id: @post.id), :method => :delete, data: { confirm: 'Do you really want to delete this post?' }%>
    <% end %>
</div>