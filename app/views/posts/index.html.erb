<div>

    <div>
        <img src=<%= @post%> alt="user"/>
        <div>
            <h2><%= @user.Name %></h2>
          
        </div>
    </div>

    <% @post.each do |post| %>
        <div>
            <h2>Post : <%= post.id %></h2>
            <p><%= post.Text %></p>
            <h3>Comments: <%= post.CommentsCounter%>, Likes: <%= post.LikesCounter %><h3>

            <% post.recent_comments.each do |comment|%>
                <h3><%= comment.user.Name %><%= comment.Text %></h3>
            <% end %>

        </div>
    <% end%>

    <button>
        Pagination
    </button>
  
</div>