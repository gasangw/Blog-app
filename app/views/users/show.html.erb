<div>
    <div>
        <img src=<%= @user.Photo %> alt="user" class="img"/>
        <div>
            <h2><%= @user.Name %></h2>
            <p>Number of posts: <%= @user.PostsCounter%></p>
        </div>
    </div>

    <p><%= @user.Bio %></p>


    <% @user.recent_posts.each do |post| %>
        <%= link_to user_post_path(@user.id, post.id) do %> 
        <div>
            <h2>Post : <%= post.Title %></h2>
            <p><%= post.Text %></p>
            <h3>Comments: <%= post.CommentsCounter%>,<h3>
            <h3>Likes: <%= post.LikesCounter %>,</h3>
        </div>
        <% end %>
    <% end%>

    <button class="button"><%=  link_to  "See all posts", user_posts_path(@user) %></button>
</div>